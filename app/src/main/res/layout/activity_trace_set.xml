<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.com.hotled.xyled.activity.TraceSetActivity">
    <LinearLayout
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="点距:"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spn_trace_pixel"
            android:layout_weight="1"
            android:padding="10dp"
            android:entries="@array/space_trace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="扫描:"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spn_trace_scan"
            android:layout_weight="1"
            android:padding="10dp"
            android:entries="@array/scan_trace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <LinearLayout
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="尺寸:"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spn_trace_size"
            android:layout_weight="1"
            android:padding="10dp"
            android:entries="@array/size_trace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="接口:"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spn_trace_hub"
            android:layout_weight="1"
            android:padding="10dp"
            android:entries="@array/hub_trace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:id="@+id/bt_traceset_commit"
            android:text="确定"
            android:background="@drawable/recycler_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:id="@+id/bt_traceset_showAll"
            android:text="全部"
            android:background="@drawable/recycler_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_selectFile"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
