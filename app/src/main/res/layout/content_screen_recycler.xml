<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:id="@+id/ll_contentScreen"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_contentScreen_screen"
            android:orientation="horizontal"
            android:background="@drawable/recycler_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_screenCatag_screen"
                android:padding="10dp"
                android:src="@drawable/ic_live_tv_primary_dark_700_36dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_screenCatag_name"
                    android:text="店铺门楣"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_screenCatag_size"
                    android:paddingTop="5dp"
                    android:layout_below="@id/tv_screenCatag_name"
                    android:text="64x32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_screenCatag_card"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:layout_below="@id/tv_screenCatag_name"
                    android:layout_toRightOf="@id/tv_screenCatag_size"
                    android:text="HC-1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_screenCatag_location"
                    android:textColor="#AA00FF"
                    android:paddingLeft="15dp"
                    android:text="门口"
                    android:layout_alignBaseline="@id/tv_screenCatag_card"
                    android:layout_toRightOf="@id/tv_screenCatag_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_contentScreen_program"
            android:background="@drawable/recycler_bg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_screenProgm_program"
                android:padding="10dp"
                android:src="@drawable/ic_photo_deep_orange_500_36dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_screenProgm_text"
                android:padding="10dp"
                android:text="文字节目 今日大减价"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>