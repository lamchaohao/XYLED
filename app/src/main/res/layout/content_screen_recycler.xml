<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:id="@+id/ll_contentScreen"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_contentScreen_program"
            android:background="@drawable/recycler_bg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_screenProgm_program"
                android:padding="10dp"
                android:src="@drawable/ic_photo_deep_orange_500_36dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_screenProgm_title"
                android:padding="10dp"
                android:text="new text1"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/textPrimary"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_screenProgm_content"
                android:padding="10dp"
                android:text="文字节目 今日大减价"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>