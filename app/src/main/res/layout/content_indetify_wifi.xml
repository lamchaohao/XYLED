<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        android:padding="15dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="10dp"
            android:id="@+id/rl_idwifi"
            android:background="@drawable/recycler_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_idwifi_wifiLevel"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_signal_wifi_3_bar_lock_cyan_600_24dp"
                />
            <TextView
                android:id="@+id/tv_idwifi_wifiName"
                android:textSize="@dimen/wifi_name_textsize"
                android:textColor="@color/textPrimary"
                android:text="newWing"
                android:ellipsize="marquee"
                android:layout_toRightOf="@+id/iv_idwifi_wifiLevel"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_idwifi_logo"
                android:src="@drawable/identify_led_logo_60dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>