<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/cv_contentScreen_screen"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/recycler_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_screenCatag_screen"
                    android:padding="10dp"
                    android:src="@drawable/ic_live_tv_primary_dark_700_36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <RelativeLayout
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_screenCatag_card"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:text="HC-1"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_screenCatag_size"
                        android:layout_centerVertical="true"
                        android:paddingTop="5dp"
                        android:text="64x32"
                        android:textColor="#1E88E5"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_screenCatag_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_screenCatag_scanCount"
                        android:paddingTop="5dp"
                        android:text="8扫"
                        android:textSize="18sp"
                        android:textColor="#6A1B9A"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_screenCatag_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/iv_screenCatag_refresh"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_refresh_primary_dark_36dp"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/rv_fragmScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_screen_add_submenu"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="85dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_screen_add_text"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:padding="3dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:text="文字节目"
                android:textColor="#FFF3E0"
                android:background="@drawable/black_rectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_white_24dp"
                app:elevation="0dp"
                app:fabSize="normal"
                app:backgroundTint="#43A047"
                app:rippleColor="#BBDEFB"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_screen_add_pic"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:padding="3dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:text="图片节目"
                android:textColor="#FFF3E0"
                android:background="@drawable/black_rectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_white_24dp"
                app:elevation="0dp"
                app:fabSize="normal"
                app:backgroundTint="#F57C00"
                app:rippleColor="#1E88E5"
                />
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_screen_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_white_24dp"
        app:backgroundTint="@color/colorAccent"
        app:rippleColor="#BBDEFB"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>