<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.com.hotled.xyled.activity.AboutUsActivity">

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/logo_alpha"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
    <TextView
        android:id="@+id/tv_current_version"
        android:padding="10dp"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_update_check"
        android:drawableRight="@drawable/ic_navigate_next_black_24dp"
        android:text="检查更新"
        android:padding="10dp"
        android:textSize="18sp"
        android:gravity="center|left"
        android:background="@drawable/recycler_bg"
        android:drawableLeft="@drawable/ic_update_primary_dark_36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
